<div class="row">
    {{#each notes}}
        <div class="col-md-3 p-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between ">
                        {{title}} <a href="/notes/edit/{{_id}}"><i class="material-icons">edit</i></a>
                    </h4>
                    <p>{{description}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">

                        <input type="hidden" name="_method" value="DELETE">

                        <button class="btn btn-danger btn-block" type="submit">
                            Eliminar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <h1>Buenas {{user.name}}</h1>
                <p class="lead"> No se han encontrado notas </p>
                <a href="/notes/add" class="btn btn-success btn-block "> Nueva Nota </a>
            </div>
        </div>
    {{/each}}
</div>